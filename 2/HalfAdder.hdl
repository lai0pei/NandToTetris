/**
 * Computes the sum of two bits.
 */
CHIP HalfAdder {
    IN a, b;    // 1-bit inputs
    OUT sum,    // Right bit of a + b 
        carry;  // Left bit of a + b

    PARTS:
    //// Replace this comment with your code.
    Nand(a=a,b=a,out=nout1);
    Nand(a=b,b=b,out=nout2);

    Nand(a=a,b=nout2,out=aout);
    Nand(a=b,b=nout1,out=bout);

    Nand(a=aout,b=bout,out=sum);

    Nand(a=a,b=b,out=sout);
    Nand(a=sout,b=sout,out=carry);
}
